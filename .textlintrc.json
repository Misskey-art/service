{
	"plugins": {},
	"filters": {
		"allowlist": {
			"allow": ["/:::.*/"]
		}
	},
	"rules": {
		"preset-jtf-style": {
			"1.1.3.箇条書き": false,
			"3.1.2.全角文字どうし": false,
			"3.3.かっこ類と隣接する文字の間のスペースの有無": false
		},
		"@textlint-rule/no-unmatched-pair": true,
		"no-dead-link": {
			"ignore": [
				"https://support.misskey.io/hc/ja/articles/6564530842767-利用規約",
				"https://support.discord.com/hc/ja/articles/360040724612--なんでDiscordは誕生日をきいてくるの",
				"https://discord.misskey.art",
				"https://service.misskey.art/"
			]
		},
		"no-nfd": true
	}
}
